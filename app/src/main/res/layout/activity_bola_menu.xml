<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4"
    tools:context=".bola_menu"
    android:background="@drawable/uibackgroundall"
    android:orientation="vertical">

    <TextView
        android:id="@+id/judulbola"
        android:background="@color/Blue"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOLA"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jaribola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Jari-jari Bola (r)" />

        <EditText
            android:id="@+id/et_jaribola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="@color/white"
            android:ems="10"
            android:inputType="number|numberDecimal" />

    </LinearLayout>

    <TextView
        android:id="@+id/judulbolasub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Menu Rumus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/RG_bola"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/rb_volumebola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="VOLUME" />

            <RadioButton
                android:id="@+id/rb_luaspermukaanbola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LUAS PERMUKAAN"
                android:textColor="@color/white"/>

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/bt_hitungbola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HITUNG"
        android:textColor="@color/black"
        android:onClick="handleHitungbola"
        app:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/bt_resetbola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:onClick="handleResetBola"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"/>

    <Button
        android:id="@+id/bt_backbola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"
        android:onClick="handleBackBola"
        android:text="BACK" />
</LinearLayout>