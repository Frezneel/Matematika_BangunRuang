<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_background"
    android:orientation="vertical"
    tools:context=".Launcher">

    <TextView
        android:id="@+id/judul_utama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="PROJECT UTS"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul_sub_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="''BANGUN RUANG''"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/judul_sub_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="(Silakan Masukkan nama anda)"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="14dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/nama_awal"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:ems="10"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:hint="Masukkan Nama"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_start"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/button_background_color"
        android:onClick="handleStart"
        android:text="@string/bt_start" />

    <TextView
        android:id="@+id/creator"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Create By : Galih M Ichsan" />

</LinearLayout>