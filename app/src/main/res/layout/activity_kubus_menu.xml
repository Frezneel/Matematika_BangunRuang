<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4"
    tools:context=".kubus_menu"
    android:background="@drawable/uibackgroundall"
    android:orientation="vertical">

    <TextView
        android:id="@+id/judulkubus"
        android:background="@color/Blue"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KUBUS"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sisikubus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Sisi Kubus (S)" />

        <EditText
            android:id="@+id/et_sisikubus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="@color/white"
            android:ems="10"
            android:inputType="numberDecimal" />

    </LinearLayout>


    <TextView
        android:id="@+id/judulbaloksub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Menu Rumus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/RG_kubus"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/rb_volumekubus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="VOLUME" />

            <RadioButton
                android:id="@+id/rb_luaspermukaankubus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LUAS PERMUKAAN"
                android:textColor="@color/white"/>

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/bt_hitungkubus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HITUNG"
        android:textColor="@color/black"
        android:onClick="handleHitungkubus"
        app:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/bt_resetkubus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:onClick="handleResetKubus"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"/>

    <Button
        android:id="@+id/bt_backkubus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"
        android:onClick="handleBackKubus"
        android:text="BACK" />
</LinearLayout>